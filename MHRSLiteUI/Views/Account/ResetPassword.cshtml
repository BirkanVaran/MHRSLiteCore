
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LayoutAccountMHRS.cshtml";
}

@if (!string.IsNullOrEmpty(ViewBag.ResetPasswordMessage))
{
<div class="text-center">
    <h4 class="text-info">@ViewBag.ResetPasswordMessage</h4>
</div>
}
<div class="row">
    <div class="col-md-6" style="margin-top:85px">
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
           
            <div asp-validation-summary="All" class="text-danger">
                <div class="form-group">
                    <label class="control-label"style="font-weight:bold">Email Adresiniz:</label>
                    <input name="email" type="email" class="form-control" />
                </div>

                <input type="submit" value="Şifre Yenileme Talebi Gönder" class="btn btn-default btn-block" style="background-color:#46B3AE; color:white" />
            </div>

        </form>
    </div>

    <div class="col-md-6">
        <img src="~/health-theme-assets/images/gallery-04.jpg" style="max-width:45%; height:auto; position:fixed" />
    </div>
</div>



